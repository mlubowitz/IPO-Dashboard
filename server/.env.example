# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration (Optional - for PostgreSQL with Prisma)
DATABASE_URL="postgresql://user:password@localhost:5432/ipo_dashboard?schema=public"

# For development without database, set to 'true' to use JSON file storage
USE_JSON_STORAGE=true

# Google OAuth 2.0 Credentials
# Get these from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_CALLBACK_URL=http://localhost:3000/api/auth/google/callback

# Session Secret (Generate a strong random string)
SESSION_SECRET=your_super_secret_session_key_change_this_in_production

# API Keys
# Finnhub API: https://finnhub.io/
FINNHUB_API_KEY=your_finnhub_api_key_here

# NewsAPI: https://newsapi.org/
NEWS_API_KEY=your_newsapi_key_here

# Client URL (for CORS)
CLIENT_URL=http://localhost:5173
